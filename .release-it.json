{
    "hooks": {
        "before:init": [
            "pnpm tsup"
        ],
        "after:git:release": "echo After git push, before github release",
        "after:release": "echo Successfully released Legacy ${name} v${version} to ${repo.repository}."
    },
    "git": {
        "tagName": "Legacy ${name}v${version}",
        "commitMessage": "Legacy chore: release v${version}"
    },
    "github": {
        "release": true
    },
    "plugins": {
        "release-it-pnpm": {},
        "@release-it/keep-a-changelog": {
            "addUnreleased": true
        }
    }
}