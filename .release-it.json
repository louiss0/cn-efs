{
    "$schema": "https://unpkg.com/release-it@17/schema/release-it.json",
    "hooks": {
        "after:git:release": "echo After git push, before github release",
        "after:bump": "pnpm run build",
        "after:release": "echo Successfully released Legacy ${npm.name} v${version} to ${repo.repository}."
    },
    "git": {
        "tagName": "legacy--${npm.name}v${version}",
        "commitMessage": "Legacy chore: release v${version}"
    },
    "github": {
        "release": true,
        "assets": [
            "dist/**/*"
        ]
    },
    "plugins": {
        "release-it-pnpm": {},
        "@release-it/keep-a-changelog": {
            "addUnreleased": true
        }
    }
}